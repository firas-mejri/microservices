version: '3'

services:

  mysql-wscnam:
    image: mysql:5.6
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_ROOT_PASSWORD: firasx19
      MYSQL_DATABASE: wscnam_api_db
      MYSQL_USER: wscnamuser
      MYSQL_PASSWORD: firasx19

  mysql-wsrf:
    image: mysql:5.6
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_ROOT_PASSWORD: firasx19
      MYSQL_DATABASE: wsrf_api_db
      MYSQL_USER: wsrfuser
      MYSQL_PASSWORD: firasx19
    depends_on:
      - mysql-wscnam

  mysql-wsmi:
    image: mysql:5.6
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_ROOT_PASSWORD: firasx19
      MYSQL_DATABASE: wsmi_api_db
      MYSQL_USER: wsmiuser
      MYSQL_PASSWORD: firasx19
    depends_on:
      - mysql-wsrf

  ws-cnam:
    image: ws-cnam
    links:
      - mysql-wscnam
    ports:
      - 8081:8080
    depends_on:
      - mysql-wsmi
    restart: always

  ws-rf:
    image: ws-rf
    links:
      - mysql-wsrf
    ports:
      - 8082:8080
    depends_on:
      - ws-cnam
    restart: always

  ws-mi:
    image: ws-mi  
    links:
      - mysql-wsmi  
    ports:
      - 8083:8080
    depends_on:
      - ws-rf
    restart: always

  eureka:
    image: eureka
    ports:
      - 8004:8000

  react:
    image: react
    ports:
      - 8000:5000

  nginx:
    image: nginx:latest
    volumes:
      - ../nginx/public:/srv/www/static
      - ../nginx/config/default.conf:/etc/nginx/conf.d/default.conf
    ports:
      - 80:80
    depends_on:
      - ws-cnam
      - ws-rf
      - ws-mi








